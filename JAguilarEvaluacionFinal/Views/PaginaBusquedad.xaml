<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JAguilarEvaluacionFinal.Views.PaginaBusquedad"
             Title="PaginaBusquedad">
    <StackLayout Padding="20">
        <Label Text="Buscar Aeropuerto" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="NombreAeropuerto" Placeholder="Ingrese el nombre del aeropuerto" />
        <Button Text="Buscar" Clicked="OnBuscarClicked" />
        <Label x:Name="Resultado" Text="" FontSize="16" TextColor="Black" />
    </StackLayout>
</ContentPage>